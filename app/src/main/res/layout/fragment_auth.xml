<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <!-- Top Decorative Element -->
    <View
        android:id="@+id/view_top_decoration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/primary_container"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="-100dp"
        android:translationY="-100dp" />

    <!-- Logo Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_logo"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_margin="@dimen/spacing_lg"
        app:cardCornerRadius="@dimen/corner_radius_xl"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/primary_container"
        app:layout_constraintBottom_toTopOf="@id/tv_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pet_placeholder"
            android:contentDescription="Aniper Logo"
            android:scaleType="centerInside"
            android:padding="@dimen/spacing_md" />

    </com.google.android.material.card.MaterialCardView>

    <!-- App Name -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/app_name"
        android:textSize="@dimen/text_display_sm"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@id/tv_tagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_logo" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:text="@string/tagline"
        android:textSize="@dimen/text_body_md"
        android:textColor="@color/on_surface_secondary"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/spacing_xs"
        app:layout_constraintBottom_toTopOf="@id/btn_google_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <!-- Sign In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google_sign_in"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_xxl"
        android:text="@string/sign_in_with_google"
        android:textSize="@dimen/text_body_sm"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        app:cornerRadius="@dimen/corner_radius_lg"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:elevation="@dimen/elevation_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Decorative Element -->
    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/secondary_container"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationX="75dp"
        android:translationY="75dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
