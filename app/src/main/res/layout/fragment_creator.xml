<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_lg"
        android:paddingEnd="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- Header with Accent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_lg">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/secondary"
                android:alpha="0.6"
                android:layout_marginBottom="@dimen/spacing_md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_character"
                android:textSize="@dimen/text_title_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 캐릭터를 만들어 보세요! ✨"
                android:textSize="@dimen/text_body_sm"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6"
                android:layout_marginTop="@dimen/spacing_xs" />

        </LinearLayout>

        <!-- Name Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm"
            app:cardBackgroundColor="@color/primary_lighter">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/character_name"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/primary_lighter">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_character_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textSize="@dimen/text_body_md" />
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Description Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm"
            app:cardBackgroundColor="@color/secondary_light">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/character_description"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/secondary_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_character_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:maxLength="200"
                    android:minHeight="80dp"
                    android:textSize="@dimen/text_body_md"
                    android:gravity="top|start" />
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Asset States Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_md">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/tertiary"
                android:alpha="0.6"
                android:layout_marginBottom="@dimen/spacing_md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asset_states"
                android:textSize="@dimen/text_title_sm"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/asset_states_hint"
                android:textSize="@dimen/text_body_sm"
                android:textColor="?android:textColorSecondary"
                android:lineSpacingExtra="2sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/asset_slots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="vertical" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:orientation="vertical"
            android:spacing="@dimen/spacing_md">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/upload_to_market"
                android:textSize="@dimen/text_body_sm"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:elevation="@dimen/elevation_md"
                app:backgroundTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/preview"
                android:textSize="@dimen/text_body_sm"
                android:textStyle="bold"
                android:textColor="@color/primary"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:strokeColor="@color/primary"
                app:strokeWidth="@dimen/stroke_width"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
