<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_lg"
        android:paddingEnd="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- Header with Accent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_character"
                android:textSize="@dimen/text_title_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 캐릭터를 만들어 보세요! ✨"
                android:textSize="@dimen/text_body_sm"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6"
                android:layout_marginTop="@dimen/spacing_xs" />

        </LinearLayout>

        <!-- Large Circular Preview Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:background="@drawable/bg_preview_circle">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pet_placeholder"
                android:contentDescription="Character preview" />

        </FrameLayout>

        <!-- Name Input - Minimal Style -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/character_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30"
                android:textSize="@dimen/text_body_md" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description Input - Minimal Style -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:hint="@string/character_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_character_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:maxLength="200"
                android:minHeight="80dp"
                android:textSize="@dimen/text_body_md"
                android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Asset States Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="@string/asset_states"
            android:textSize="@dimen/text_title_sm"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="@string/asset_states_hint"
            android:textSize="@dimen/text_body_sm"
            android:textColor="?android:textColorSecondary"
            android:lineSpacingExtra="2sp" />

        <!-- Asset Slots - Horizontal Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/asset_slots_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false" />

        </HorizontalScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:orientation="vertical"
            android:spacing="@dimen/spacing_md">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/upload_to_market"
                android:textSize="@dimen/text_body_sm"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:elevation="@dimen/elevation_md"
                app:backgroundTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/preview"
                android:textSize="@dimen/text_body_sm"
                android:textStyle="bold"
                android:textColor="@color/primary"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:strokeColor="@color/primary"
                app:strokeWidth="@dimen/stroke_width"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
