<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="28dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_character"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 캐릭터를 만들어 보세요! ✨"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/on_surface_secondary"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="28dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/primary"
            app:strokeWidth="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_pet_card_gradient">

                <ImageView
                    android:id="@+id/iv_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_pet_placeholder"
                    android:contentDescription="Character preview"
                    android:padding="24dp" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="캐릭터 이름"
            app:hintTextColor="@color/on_surface_secondary"
            app:boxStrokeColor="@color/primary"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/on_surface"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="캐릭터 설명"
            app:hintTextColor="@color/on_surface_secondary"
            app:boxStrokeColor="@color/primary"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_character_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:maxLength="200"
                android:minHeight="100dp"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/on_surface"
                android:gravity="top|start"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Asset States Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/asset_states"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/asset_states_hint"
            android:textSize="13sp"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/on_surface_secondary"
            android:lineSpacingExtra="2sp" />

        <!-- Asset Slots -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/asset_slots_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false" />

        </HorizontalScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:spacing="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="@string/upload_to_market"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/on_secondary"
                app:cornerRadius="28dp"
                app:elevation="6dp"
                app:backgroundTint="@color/secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/preview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/primary"
                app:cornerRadius="28dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="3dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
