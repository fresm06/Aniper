<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (4dp offset) -->
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-4dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main card with border -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <stroke
                android:width="@dimen/stroke_thick"
                android:color="@color/primary" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
