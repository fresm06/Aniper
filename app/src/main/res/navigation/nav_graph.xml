<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aniper.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/creatorFragment"
        android:name="com.aniper.ui.creator.CreatorFragment"
        android:label="Creator"
        tools:layout="@layout/fragment_creator" />

    <fragment
        android:id="@+id/marketFragment"
        android:name="com.aniper.ui.market.MarketFragment"
        android:label="Market"
        tools:layout="@layout/fragment_market" />

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.aniper.ui.admin.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.aniper.ui.auth.AuthFragment"
        android:label="Login"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_auth_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
